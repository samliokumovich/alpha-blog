<p id="notice"><%= notice %></p>


  <h2 align="center" ><strong> Title:</strong>
    <%= @article.title %>
  </h2>

<div class = "well col-xs-8 col-xs-offset-2">
  <h4 class = "center description"><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article_actions">
    <div class = "text_right">
    <%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-xs btn-primary"%>
    <%= link_to 'View Articles', articles_path,  class: "btn btn-xs btn-success" %>
    <%= link_to 'Delete This', article_path(@article), method: :delete,
      data: {confirm: "Delete this Article?"} , class: "btn btn-danger btn-xs" %>
    </div>
  </div>
</div>
